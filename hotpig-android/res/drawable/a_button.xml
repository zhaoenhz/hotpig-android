<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFF5BA"
                android:endColor="#FBDD52"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#F4C63F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="3dp"
                android:right="10dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFEFAA"
                android:endColor="#FFE155"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#F4C63F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="3dp"
                android:right="10dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>